+	 */
+	*ascent = *descent = *width = 0.0;
+#ifdef CANVASDEBUG
+	Rprintf("MetricInfo(c=%d,gc=0x%x,ascent=%f,descent=%f,width=%f,RGD=0x%x)\n",c,gc,*ascent,*descent,*width,RGD);
+#endif
+}
